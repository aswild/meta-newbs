+#ifndef _SHIFTBRITE_H_
+#define _SHIFTBRITE_H_
+
+#include <linux/ioctl.h>
+
+#define SHIFTBRITE_IOCQHELLO    _IO('S', 1)
+
+#endif // _SHIFTBRITE_H_
