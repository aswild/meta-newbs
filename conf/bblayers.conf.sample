LCONF_VERSION = "5"

BBPATH = "${TOPDIR}"
BBFILES ?= ""

BBLAYERS ?= " \
  ##OEROOT##/meta \
  ##NEWBSROOT##/meta-raspberrypi \
  ##NEWBSROOT##/meta-newbs \
  "

BBLAYERS_NON_REMOVABLE ?= " \
  ##OEROOT##/meta \
  "

